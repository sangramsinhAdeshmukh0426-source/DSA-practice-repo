class Solution {
    public int secondLargest(int[] nums) {
        int largest = nums[0];
        int sLargest = Integer.MIN_VALUE;

        for (int i = 1; i < nums.length; i++) {
            if (nums[i] > largest) {
                sLargest = largest;
                largest = nums[i];
            } else if (nums[i] > sLargest && nums[i] != largest) {
                sLargest = nums[i];
            }
        }
        return sLargest;
    }
}
